<!-- app/views/devise/sessions/new.html.erb -->
<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="max-w-md w-full bg-white shadow-lg rounded-lg p-8">
    <h2 class="text-3xl font-bold text-center text-gray-800">Log In</h2>

    <%= form_with(model: resource, url: session_path(resource_name), local: true, class: "mt-6") do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-indigo-500" %>
      </div>

      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600" %>
        </div>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-indigo-600 hover:underline" %>
      </div>

      <div>
        <%= f.submit "Log In", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 rounded-md" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <p class="text-sm text-gray-600">Don't have an account?
        <%= link_to "Sign Up", new_user_registration_path, class: "text-indigo-600 hover:underline" %>
      </p>
    </div>
  </div>
</div>
